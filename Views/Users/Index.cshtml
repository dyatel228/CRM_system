@model IEnumerable<CRM.Web.Models.User>
@{
    ViewData["Title"] = "Пользователи";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="form-title">
            <i class="fas fa-users"></i> @ViewData["Title"]
        </h1>
        <a href="/Users/Create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Добавить пользователя
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-table">
            <i class="fas fa-users-slash"></i>
            <p>Пользователи не найдены</p>
            <a href="/Users/Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Добавить первого пользователя
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ФИО</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Роль</th>
                        <th>Дата создания</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.GetFullName()</strong>
                            </td>
                            <td>
                                <i class="fas fa-envelope text-primary"></i> @item.Email
                            </td>
                            <td>
                                <i class="fas fa-phone text-success"></i> @item.Phone
                            </td>
                            <td>
                                @{
                                    var roleClass = item.Role switch
                                    {
                                        "Администратор" => "bg-danger",
                                        "менеджер" => "bg-primary",
                                        "Менеджер" => "bg-primary",
                                        "Аналитик" => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @roleClass">@item.Role</span>
                            </td>
                            <td>
                                <span class="text-muted">@item.CreatedDate.ToString("dd.MM.yyyy")</span>
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="/Users/Edit/@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Users/Delete/@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>